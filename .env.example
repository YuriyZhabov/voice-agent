# LiveKit Configuration (required)
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# SIP Telephony - LiveKit (optional, for phone calls)
# Get these after creating trunk in LiveKit Cloud Dashboard
SIP_TRUNK_ID=ST_xxxxxxxxxxxx
SIP_PHONE_NUMBER=+7XXXXXXXXXX
AGENT_NAME=voice-agent-mvp

# MTS Exolve Configuration (optional, for SIP management)
# Get API key from: https://dev.exolve.ru
# SIP domain: sip.exolve.ru
# Exolve IPs to whitelist: 80.75.130.99, 80.75.130.100, 80.75.130.101
EXOLVE_API_KEY=your-exolve-api-key
EXOLVE_SIP_RESOURCE_ID=your-sip-resource-id
EXOLVE_PHONE_NUMBER=+7XXXXXXXXXX
EXOLVE_SIP_USERNAME=883140XXXXXXXXXX
EXOLVE_SIP_DOMAIN=sip.exolve.ru

# STT - Deepgram (required)
DEEPGRAM_API_KEY=your-deepgram-key

# LLM - OpenAI-compatible API via CometAPI (required)
# Get API key from: https://cometapi.com
OPENAI_API_KEY=your-cometapi-key
OPENAI_BASE_URL=https://api.cometapi.com/v1
OPENAI_MODEL=gpt-4o-mini

# TTS - ElevenLabs (required)
ELEVEN_API_KEY=your-elevenlabs-key
ELEVENLABS_VOICE_ID=alex

# Agent Configuration
AGENT_SYSTEM_PROMPT="Ты полезный голосовой ассистент компании X. Отвечай кратко и по делу на русском языке."

# n8n MCP Integration (optional)
N8N_MCP_URL=http://localhost:5678/mcp

# Timeouts
SILENCE_TIMEOUT_SECONDS=60
TOOL_TIMEOUT_SECONDS=30
