# LiveKit Configuration (required)
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# Agent Configuration
AGENT_NAME=voice-agent-mvp
AGENT_SYSTEM_PROMPT="Ты полезный голосовой ассистент. Отвечай кратко и по делу на русском языке."

# LLM Provider: "inference" (LiveKit), "groq", or "openai"
LLM_PROVIDER=inference
INFERENCE_MODEL=openai/gpt-4.1-mini

# Groq (if LLM_PROVIDER=groq)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# OpenAI (if LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# STT - Deepgram (required)
DEEPGRAM_API_KEY=your-deepgram-api-key

# TTS - ElevenLabs (required)
ELEVEN_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# SIP Telephony (optional)
SIP_TRUNK_ID=your-trunk-id
SIP_PHONE_NUMBER=+7XXXXXXXXXX

# n8n MCP Integration (optional)
N8N_MCP_URL=http://localhost:5678/mcp

# Smithery MCP Integration (optional)
SMITHERY_API_KEY=your-smithery-api-key
SMITHERY_SERVERS=exa,@anthropic/brave-search

# Timeouts
SILENCE_TIMEOUT_SECONDS=60
TOOL_TIMEOUT_SECONDS=30

# ============================================
# Yandex Cloud Configuration (optional)
# ============================================

# Authentication (choose one method)
YC_API_KEY=your-yandex-cloud-api-key
YC_IAM_TOKEN=                           # Alternative: IAM token
YC_FOLDER_ID=your-folder-id             # Required for all Yandex Cloud services
YC_SA_KEY_FILE=                         # Alternative: path to service account key file

# Provider Selection (deepgram/yandex, cartesia/yandex, openai/yandex)
STT_PROVIDER=deepgram
TTS_PROVIDER=cartesia
# LLM_PROVIDER already defined above (inference/groq/openai/yandex)

# SpeechKit STT Configuration
YANDEX_STT_MODEL=general                # general, general:rc (preview)
YANDEX_STT_LANGUAGE=ru-RU

# SpeechKit TTS Configuration
YANDEX_TTS_VOICE=alena                  # alena, filipp, ermil, jane, madirus, omazh, zahar
YANDEX_TTS_ROLE=neutral                 # neutral, good, evil (for some voices)
YANDEX_TTS_SPEED=1.0                    # 0.1 - 3.0
YANDEX_TTS_SAMPLE_RATE=22050            # 8000, 16000, 22050, 48000

# YandexGPT Configuration
YANDEX_LLM_MODEL=yandexgpt-lite         # yandexgpt-lite, yandexgpt (Pro)
YANDEX_LLM_TEMPERATURE=0.6
